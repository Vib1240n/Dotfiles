# changing window focus
alt + shift - w : yabai -m window --focus north
alt + shift - s : yabai -m window --focus south
alt + shift - a : yabai -m window --focus west
alt + shift - d : yabai -m window --focus east


# controlling display focus
alt + shift - h : yabai -m display --focus west
alt + shift - l : yabai -m display --focus east
alt + shift - j : yabai -m display --focus north
alt + shift - k : yabai -m display --focus south

# Resizing Windows
alt + shift - q : yabai -m window --resize left:-20:0
alt + shift - e : yabai -m window --resize left:20:0
alt + shift - c : yabai -m window --resize right:20:-20
alt + shift - z : yabai -m window --resize right:-20:20

# Rotate on X and Y Axis
alt + shift - x : yabai -m space --mirror x-axis
alt + shift - y : yabai -m space --mirror y-axis

# controlling window size
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# moving windows to different spaces
alt + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1;
alt + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2;
alt + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3;
alt + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4;
alt + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5;
alt + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6;
alt + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7;
alt + shift - f : yabai -m space --create && yabai -m space --focus next
alt + shift - g : yabai -m space --destroy && yabai -m space --focus last

# swapping
alt + shift - b : yabai -m window --swap north
alt + shift - n : yabai -m window --swap south
alt + shift - v : yabai -m window --swap west
alt + shift - m : yabai -m window --swap east

# starting and stopping yabai
ctrl + alt + cmd - i : yabai --start-service
ctrl + alt + cmd - o : yabai --stop-service
ctrl + alt + cmd - p : yabai --restart-service

# restarting skhd
ctrl + alt + cmd - j : skhd --start-service
ctrl + alt + cmd - k : skhd --stop-service
ctrl + alt + cmd - l : skhd --restart-service

# moving windows to different displays
alt + shift - u : yabai -m window --display 1
alt + shift - i : yabai -m window --display 2
alt + shift - o : yabai -m window --display 3
alt + shift - p : yabai -m window --display 4

#balance windows
ctrl + alt + cmd - b : yabai -m space --balance

